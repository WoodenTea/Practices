<resources>

    <style name="WTTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="AppTheme" parent="WTTheme">

    </style>

    <style name="OverflowButtonStyle" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_input_add</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/eiffel_tower</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="OverflowMenuStyle">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:colorBackground">#FFCC99</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:textColor">#0099CC</item>
    </style>

    <style name="WTTextView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:gravity">center_vertical|center</item>
    </style>

    <style name="WTSubmitButton" parent="WTTextView">
        <item name="android:background">@drawable/bg_submit_button</item>
        <item name="android:textColor">@color/submit_button_text_color</item>
    </style>

    <style name="WTCancelButton" parent="WTTextView">
        <item name="android:background">@drawable/bg_cancel_button</item>
        <item name="android:textColor">@color/cancel_button_text_color</item>
    </style>

    <style name="WTTransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="WTDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
