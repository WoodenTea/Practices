<LinearLayout android:id="@+id/scene"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/official_margin"
    android:paddingLeft="@dimen/official_margin"
    android:paddingRight="@dimen/official_margin"
    android:paddingTop="@dimen/official_margin">

    <ImageView
        android:id="@+id/cartoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/cartoon"
        android:transitionName="robot" />

</LinearLayout>